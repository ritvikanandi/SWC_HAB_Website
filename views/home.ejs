<%- include("./partials/header.ejs") %>

  <!-- HERO SECTION STARTS -->
  <section class="h-3/4 relative" style="background: #254D56;">
    <div class="absolute bottom-0 h-5/6 w-5/6" style="background: #12262B;transform: rotate(-2.29deg)"></div>
    <div class="absolute bottom-0 h-5/6 w-5/6" style="background: #2B5964;transform: rotate(-0.92deg)"></div>
    <div class="absolute bottom-0 right-2 h-5/6 w-5/6" style="background: #12262B;transform: rotate(2.69deg)"></div>
    <div class="absolute bottom-0 right-2 h-5/6 w-5/6" style="background: #2B5964;transform: rotate(1.42deg)"></div>
    <div class="absolute h-full w-full px-4 md:px-36 py-8 flex flex-col md:flex-row justify-center"
      style="background: #254D56;">
      <div class="md:w-7/12 pt-10">
        <h1 class="text-6xl md:text-9xl text-white text-center md:text-left font-black">HOSTEL</h1>
        <h1 class="text-3xl md:text-6xl text-white text-center md:text-left font-black pt-4">AFFAIRS BOARD</h1>
      </div>
      <div class="md:w-5/12 py-10 px-12">
        <div class="py-2 text-white font-semibold text-base text-center" style="background-color: #1f4047;">
          ANNOUNCEMENTS
        </div>
        <% for(let i=1;i<=4;i++){ %>
          <div class="relative w-full my-2 font-semibold text-base text-center" style="height: 40px;">
            <div class="absolute top-0 py-2 h-full w-full"
              style="background-color: #0d1b1e;transform: rotate(-1.91deg)">
            </div>
            <div class="absolute top-0 py-2 h-full w-full"
              style="background-color: #8DC2CE;transform: rotate(-1.17deg)">
            </div>
            <div class="absolute top-0 py-2 w-full bg-white">Annoucement #<%=i%><span
                  class="ml-2 font-normal text-xs px-1 py-0.5 rounded-sm" style="background: #C6E1E7;">NEW</span></div>
          </div>
          <%} %>
      </div>
    </div>
  </section>
  <!-- HERO SECTION ENDS -->

  <!-- NOTICES SECTION STARTS -->
  <section id="notices" class="text-gray-600 body-font px-6 md:px-32 py-12">
    <h1 class="px-4 text-3xl text-center md:text-left font-bold">NOTICES</h1>
    <div class="container px-5 py-12 md:py-16 mx-auto">
      <!-- <div class="flex flex-wrap -mx-4 -my-8"> -->
      <div class="grid gap-12 grid-cols-1 md:grid-cols-2 2xl:grid-cols-3">
        <% notices.forEach((notice)=>{ %>
          <div class="w-full h-auto" style="background: #18272b;transform: rotate(-3deg);">
            <div class="w-full h-auto" style="background: #A9D1DA;transform: rotate(2deg);">
              <div class="py-8 px-4 h-full"
                style="transform: rotate(1deg);border: 1.5px solid #A9D1DA;background: #F3F4F7;">
                <div class="h-full flex items-start">
                  <div class="w-12 flex-shrink-0 flex flex-col text-center leading-none">
                    <span class="text-gray-500 pb-2 mb-2 border-b-2 border-gray-200">
                      <%= notice.creation.toString().split(" ")[1] %></span>
              <span class=" font-medium text-lg text-gray-800 title-font leading-none">
                        <%= notice.creation.toString().split(" ")[2] %></span>
            </div>
            <div class=" flex-grow pl-6">
                          <h2 class="tracking-widest text-xs title-font font-medium text-indigo-500 mb-1"
                            style="color: #377381;">CATEGORY</h2>
                          <h1 class="title-font text-xl font-medium text-gray-900 mb-3">
                            <%= notice.title %>
                          </h1>
                          <p class="leading-relaxed mb-5">
                            <%= notice.description %>
                          </p>
                          <a class="inline-flex items-center">
                            <span class="flex-grow flex flex-col pl-3">
                              <a href="/notice/<%=notice.id%>" target="_blank"><button
                                  class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 rounded">Notice</button></a>
                            </span>
                          </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </section>
  <!-- NOTICES SECTION ENDS -->

  <%- include("./partials/footer.ejs") %>